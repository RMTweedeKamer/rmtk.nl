{
    "compilerOptions": {
      "declaration": false,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "lib": ["es6", "dom"],
      "module": "es6",
      "moduleResolution": "node",
      "sourceMap": true,
      "target": "es5",
      "jsx": "react",
      "allowSyntheticDefaultImports":true,
      "strictNullChecks":true,
      "strict": true,
      "types": [
        "webpack-env"
      ]
    },
    "exclude": ["**/*.spec.ts", "node_modules", "vendor", "public"],
    "compileOnSave": false
  }
